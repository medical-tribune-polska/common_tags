<div class="row">
  <div class="col-sm-12">
    <%= render 'lists_menu' %>
  </div>
</div>

<div class="row">
  <div class="col-sm-8">
    <h1>Tagi</h1>

    <p><%= link_to 'New Tag', new_list_tag_path(@list), class: 'btn btn-default' %></p>

    <table class="table tags-table">
      <% @tags.each do |tag| %>
        <tr>
          <td>
            <% if tag.specialization %>
              <span class="glyphicon glyphicon-tag"></span>
            <% end %>
          </td>
          <td>
            <span class="label label-info"><%= tag.name %></span>
          </td>
          <td><%= link_to 'Edit', edit_list_tag_path(@list, tag),
                          class: 'btn btn-default btn-xs' %></td>
          <td><%= link_to 'Destroy', list_tag_path(@list, tag), method: :delete,
                          class: 'btn btn-danger btn-xs',
                          data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </table>

    <p><%= link_to 'New Tag', new_list_tag_path(list: @list), class: 'btn btn-default' %></p>
  </div>
</div>
