<%= form_for @tag do |f| %>

<div class="row">
  <div class="col-sm-8">

    <% if @tag.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <p><strong><%= pluralize(@tag.errors.count, "error") %> prohibited this tag from being saved:</strong></p>

        <ul>
        <% @tag.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="checkbox">
      <label>
        <%= f.check_box :specialization, class: 'checkbox' %>
        specialization?
      </label>
    </div>

    <div class="form-group">
      <%= f.label :related_tags %>
      <br>
      <%= f.collection_select :connected_tag_ids,
                              @tag.related_tags_for_select,
                              :id,
                              :name,
                              { selected: @tag.connected_tag_ids },
                              { multiple: true, class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= f.submit 'Save', class: 'btn btn-success' %>
    </div>

  </div>
</div>

<% end %>